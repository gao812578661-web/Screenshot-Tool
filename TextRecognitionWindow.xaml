<Window x:Class="RefScrn.TextRecognitionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="OCR Result" Height="600" Width="900" 
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <!-- WeChat-like Flat Button Style -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- WeChat-like TabItem Style -->
        <Style x:Key="WeChatTabItem" TargetType="TabItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Grid>
                            <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                    BorderBrush="{TemplateBinding BorderBrush}" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter x:Name="ContentSite"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ContentSource="Header"/>
                            </Border>
                            <!-- Underline Indicator -->
                            <Rectangle x:Name="Underline" VerticalAlignment="Bottom" Height="2" Fill="Transparent" Margin="15,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="#07C160"/> <!-- WeChat Green -->
                                <Setter TargetName="Underline" Property="Fill" Value="#07C160"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#07C160"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/> <!-- Image Area -->
            <ColumnDefinition Width="1*"/> <!-- Text Area -->
        </Grid.ColumnDefinitions>

        <!-- Left Column: Image Preview -->
        <Border Grid.Column="0" Background="#E0E0E0" CornerRadius="5" Margin="0,0,10,0" ClipToBounds="True">
            <Grid>
                <!-- Checkered background for transparency -->
                <Canvas Width="20" Height="20" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <Rectangle Fill="#F0F0F0" Width="10" Height="10"/>
                    <Rectangle Fill="#E0E0E0" Width="10" Height="10" Canvas.Left="10"/>
                    <Rectangle Fill="#E0E0E0" Width="10" Height="10" Canvas.Top="10"/>
                    <Rectangle Fill="#F0F0F0" Width="10" Height="10" Canvas.Left="10" Canvas.Top="10"/>
                </Canvas>
                <Image x:Name="PreviewImage" Stretch="Uniform" Margin="10"/>
            </Grid>
        </Border>

        <!-- Right Column: Text Result -->
        <Grid Grid.Column="1">
            <TabControl Margin="0,0,0,10" Background="White" BorderThickness="0" SelectedIndex="0">
                <TabControl.Resources>
                     <Style TargetType="TabItem" BasedOn="{StaticResource WeChatTabItem}"/>
                </TabControl.Resources>
                <TabItem x:Name="OriginalTab" Header="Original Text">
                    <TextBox x:Name="ResultTextBox" 
                             AcceptsReturn="True" 
                             TextWrapping="Wrap" 
                             VerticalScrollBarVisibility="Auto"
                             Padding="10"
                             FontSize="14"
                             BorderThickness="0"/>
                </TabItem>
                <TabItem x:Name="TranslationTab" Header="Translation">
                    <Grid>
                        <TextBox x:Name="TranslationTextBox" 
                                 AcceptsReturn="True" 
                                 TextWrapping="Wrap" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="10"
                                 FontSize="14"
                                 BorderThickness="0"
                                 IsReadOnly="True"/>
                        <TextBlock x:Name="TranslationPlaceholder" Text="Click 'Translate' to see translation." 
                                   VerticalAlignment="Center" HorizontalAlignment="Center" 
                                   Foreground="Gray" IsHitTestVisible="False"/>
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
    </Grid>
</Window>
